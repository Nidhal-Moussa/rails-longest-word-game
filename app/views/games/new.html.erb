<h2 style="padding-left:50px;">New game</h2>
<div class="body">
<% @letter.each do |char| %>
  <span class="char"><%=char%></span>
<% end %>
</div>
<form action="/score" method="POST" style="text-align:center;">
  <label>what's your longest word</label>
  <input type="text" name='word'>
  <input type="submit" value="bingo">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
